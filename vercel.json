{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "styles.css", 
      "use": "@vercel/static"
    },
    {
      "src": "script.js",
      "use": "@vercel/static"  
    },
    {
      "src": "api/**",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/game-server.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_OPTIONS": "--max_old_space_size=512"
  }
}